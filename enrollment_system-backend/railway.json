{
    "build": {
      "builder": "nixpacks",
      "commands": [
        "composer install --ignore-platform-reqs",
        "npm install --legacy-peer-deps",
        "npm run build"
      ]
    },
    "start": {
      "command": "php artisan serve --host=0.0.0.0 --port=$PORT"
    },
    "deploy": {
      "region": "us-west"
    }
  }
  